{
    "name": "@republic-global/payment-client",
    "repository": {
        "type": "git",
        "url": "https://github.com/republic-global/crowdcraft.git"
    },
    "version": "1.0.2",
    "type": "module",
    "types": "./dist/src/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        "types": [
            "./dist/src/index.d.ts",
            "./dist/src/schema.gen.d.ts",
            "./dist/src/types.gen.d.ts",
            "./dist/src/services.gen.d.ts"
        ],
        "import": "./dist/src/index.js",
        "package.json": "./package.json"
    },
    "scripts": {
        "_clean-dist": "rimraf dist",
        "_clean-src": "rimraf src",
        "_codegen": "openapi-ts -i  ../../services/payment-service/docs/api-docs.json -o src",
        "_fix-import-paths": "fix-esm-import-path src",
        "_build": "npx tsc --build",
        "format": "prettier -w '**/*.{js,ts,mjs,cjs,json,tsx,jsx}'",
        "format:check": "prettier --check '**/*.{js,ts,mjs,cjs,json,tsx,jsx}'",
        "generate": "run-s _clean-src _codegen _fix-import-paths format",
        "build": "run-s _clean-dist _build"
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@hey-api/openapi-ts": "^0.46.3",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20.14.2",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "fix-esm-import-path": "^1.6.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.7",
        "typescript": "^5.4.5"
    }
}
